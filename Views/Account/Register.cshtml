@using EHRsystem.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-success">Create Account</h2>
                    <p class="text-muted">Register to access the EHR system</p>
                </div>

                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-success fw-semibold">Name</label>
                        <input asp-for="Name" class="form-control rounded-3" placeholder="Full Name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-success fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control rounded-3" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-success fw-semibold">Password</label>
                        <input asp-for="Password" class="form-control rounded-3" type="password" placeholder="Enter a strong password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label text-success fw-semibold">Role</label>
                        <select asp-for="Role" class="form-select rounded-3">
                            <option value="">-- Select Role --</option>
                            <option value="Patient">Patient</option>
                            <option value="Doctor">Doctor</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-success rounded-3 fw-bold">Register</button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Already have an account?
                            <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold text-success">Login here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
