@using EHRsystem.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Welcome Back</h2>
                    <p class="text-muted">Login to your account</p>
                </div>

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-primary fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control rounded-3" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-primary fw-semibold">Password</label>
                        <input asp-for="Password" class="form-control rounded-3" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary rounded-3 fw-bold">Login</button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Don't have an account?
                            <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-semibold text-primary">Register here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
