@model EHRsystem.Models.Entities.Appointment

@{
    ViewData["Title"] = "Add Appointment Slot";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var model = Model ?? new EHRsystem.Models.Entities.Appointment();
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Add Available Appointment Slot</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="AppointmentDate" class="form-label">Date & Time</label>


            <input class="form-control" type="datetime-local" name="AppointmentDate"
                value="@(Model != null ? Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm") : "")" required />

            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Slot Description</label>
            <input asp-for="Reason" class="form-control" placeholder="e.g. General Checkup" />
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Slot</button>
        <a asp-action="Manage" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
