@model EHRsystem.Models.Entities.Prescription
@{
    ViewData["Title"] = "Add Prescription";
}

<h2>Add Prescription</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MedicationName"></label>
        <input asp-for="MedicationName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Dosage"></label>
        <input asp-for="Dosage" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Frequency"></label>
        <input asp-for="Frequency" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save Prescription</button>
</form>

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}
