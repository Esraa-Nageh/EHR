
@model IEnumerable<EHRsystem.Models.Entities.Patient>

@{
    ViewData["Title"] = "My Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold mb-4">My Patients</h2>

    @if (Model == null || !Model.Any()) // Added null check for Model
    {
        <div class="alert alert-info text-center">
            No patients found for your appointments yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Birth Date</th>
                        <th>National ID</th>
                        <th>View History</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr class="text-center">
                            <td>@patient.Name</td>
                            <td>@patient.Email</td>
                            <td>@patient.Gender</td>
                            <td>@patient.BirthDate.ToString("MMM dd,yyyy")</td>
                            <td>@patient.NationalId</td>
                            <td>
                                <a asp-action="PatientHistory"
                                   asp-route-patientId="@patient.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
