@model List<EHRsystem.Models.Entities.Appointment>

@{
    ViewData["Title"] = "Today's Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Today's Appointments</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">You have no appointments scheduled for today.</p>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Time</th>
                    <th>Patient Name</th>
                    <th>Reason</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.AppointmentDate.ToString("hh:mm tt")</td>
                        <td>@appointment.Patient?.Name ?? "Unknown"</td>
                        <td>@appointment.Reason</td>
                        <td>@appointment.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
